echo "- - - - - - - - - - - - - - - - - - -"
echo " Aliases (loading...)"
echo "- - - - - - - - - - - - - - - - - - -"
cat ~/.bash_aliases
source ~/.bash_aliases

echo "- - - - - - - - - - - - - - - - - - -"
echo " Aliases (not working!)"
echo "- - - - - - - - - - - - - - - - - - -"
echo "value of \$HOST_NAME = '$HOST_NAME'"
echo "value of \$PYTHON_HTTP = '$PYTHON_HTTP'"
echo "value of \$HTTP_PHP_HTTP = '$HTTP_PHP_HTTP'"
